<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影层 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD" /> <!-- 阴影的颜色 -->
            <corners android:radius="8dp" /> <!-- 圆角半径 -->
        </shape>
    </item>
    <!-- 内容层 -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 内容的颜色 -->
            <corners android:radius="8dp" /> <!-- 圆角半径，与阴影层保持一致 -->
        </shape>
    </item>
</layer-list>
